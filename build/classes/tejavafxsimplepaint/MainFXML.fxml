<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane id="BorderPane"
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tejavafxsimplepaint.MainFXMLController" 
            prefWidth ="800.0" prefHeight="600.0">
    <top>
        <VBox>
            <MenuBar>
                <Menu text ="File">
                    <MenuItem text="Open" onAction="#onOpen" />
                    <MenuItem text="Save" onAction="#onSave" />
                    <MenuItem text="Clear all" onAction="#onClearAll" />
                    <MenuItem text="Exit" onAction="#onExit" />
                </Menu>
            </MenuBar>
                <HBox alignment="CENTER" spacing ="5">
                    <Label fx:id="lblMode" text="Mode"/>
                    <ChoiceBox fx:id="toolChooser" />
                    <Label fx:id="lblThickness" text="Thickness"/>
                    <TextField fx:id="brushSize" text="5"/>
                    <Label fx:id="lblColor" text="Color"/>
                    <ColorPicker fx:id="colorPicker" />
                    <CheckBox fx:id="fillShapes" text="Fill shapes"/>
                    <CheckBox fx:id="eraser" text="eraser"/>
                </HBox>
            <ToolBar>
                
            </ToolBar>
        </VBox>
    </top>
    
    <center>
        <Pane>
            <Canvas fx:id="canvasBottom" width="800" height="600" />
            <Canvas fx:id="canvasTop" width="800" height="600" />
        </Pane>

    </center>
</BorderPane>
