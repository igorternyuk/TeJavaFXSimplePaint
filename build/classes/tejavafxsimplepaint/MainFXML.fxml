<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane id="BorderPane"
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tejavafxsimplepaint.MainFXMLController" 
            prefHeight ="600.0" prefWidth="600.0">
    <top>
        <VBox>
            <MenuBar>
                <Menu text ="File">
                    <MenuItem text="Save" onAction="#onSave" />
                    <MenuItem text="Exit" onAction="#onExit" />
                </Menu>
            </MenuBar>
                <HBox alignment="CENTER" spacing ="5">
                    <TextField fx:id="brushSize" text="18" />
                    <ColorPicker fx:id="colorPicker" />
                    <CheckBox fx:id="eraser" text="eraser"/>
                </HBox>
            <ToolBar>
                
            </ToolBar>
        </VBox>
    </top>
    
    <center>
        <Pane>
            <Canvas fx:id="canvasBottom" width="600" height="600" />
            <Canvas fx:id="canvasTop" width="600" height="600" />
        </Pane>

    </center>
</BorderPane>
